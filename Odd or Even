#include <stdio.h>
int main() {
    int n;
    printf("How many numbers do you want to check? ");
    scanf("%d", &n);
    if (n <= 0) {
        printf("Invalid input. Please enter a positive number.\n");
        return 1;
    }
    int numbers[n];
    printf("Enter %d numbers:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &numbers[i]);
    }
    printf("\nResults:\n");
    for (int i = 0; i < n; i++) {
        if (numbers[i] % 2 == 0) {
            printf("%d is Even\n", numbers[i]);
        } else {
            printf("%d is Odd\n", numbers[i]);
        }
    }
    return 0;
}
