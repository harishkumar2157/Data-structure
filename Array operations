
#include <stdio.h>
int main(){
    int a[100], n=0, choice, pos, val;
    do{
        printf("\n1.Insert 2.Delete 3.Display 4.Exit\nEnter choice: ");
        scanf("%d",&choice);
        switch(choice){
            case 1: 
                printf("Enter value and position: ");
                scanf("%d%d",&val,&pos);
                for(int i=n;i>pos;i--) a[i]=a[i-1];
                a[pos]=val; n++;
                break;
            case 2:
                printf("Enter position to delete: ");
                scanf("%d",&pos);
                for(int i=pos;i<n-1;i++) a[i]=a[i+1];
                n--; 
                break;
            case 3:
                printf("Array: ");
                for(int i=0;i<n;i++) printf("%d ",a[i]);
                printf("\n");
                break;
        }
    }while(choice!=4);
    return 0;
}
